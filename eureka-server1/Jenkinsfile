stages {
        stage('checkout'){
            steps{
                git branch: 'config-server', url: 'https://github.com/hand-wanggang/erueka-demo.git'
            }
        }
        stage('Build') {
            steps {
                echo 'Building'
                gradle build
            }
        }
        stage('Test') {
            steps {
                echo 'Testing'
            }
        }
        stage('Deploy - Staging') {
            steps {
                sh './deploy staging'
                sh './run-smoke-tests'
            }
        }
        stage('Sanity check') {
            steps {
                input "Does the staging environment look ok?"
            }
        }
        stage('Deploy - Production') {
            steps {
                sh './deploy production'
            }
        }
    }